  SELECT
	tor.orderNum AS ordernum,
	tep. NAME AS gdrname,
	tor.uuid AS uuid
	
FROM
	tbl_order tor
INNER JOIN tbl_emp tep ON tor.completer = tep.uuid
WHERE
	1 = 1
	<if test="empUuid != null">
	AND tor.completer = ?
	</if>
	<if test="orderNum != null">
	AND tor.orderNum =?
	</if>
